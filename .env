# Spotify API
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://localhost:8501

# Google Service Account
# Вариант 1: JSON-строка (без переносов)
# GOOGLE_SERVICE_ACCOUNT_JSON='{"type": "service_account", ...}'
# Вариант 2: путь до файла JSON-ключа (абсолютный путь)
GOOGLE_SERVICE_ACCOUNT_FILE=/absolute/path/to/service-account.json

# Registry sheet (общий реестр приложения)
REGISTRY_SHEET_ID=your_registry_sheet_id

# Fernet key для шифрования refresh_token
# Сгенерировать: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FERNET_KEY=your_fernet_key

# Опциональные настройки
SYNC_LOOKBACK_MINUTES=120
DEDUP_READ_ROWS=5000
CACHE_TTL_DAYS=30
SYNC_PAGE_LIMIT=50
MAX_PAGES_PER_RUN=10